# Root .env for docker-compose
# Copy to .env and fill in values

# Database
DB_ROOT_PASSWORD=changeme
DB_NAME=bfp_sorsogon_attendance
DB_USER=bfp_user
DB_PASS=changeme

# API
JWT_SECRET=change-this-to-a-long-random-secret
JWT_EXPIRES_IN=1h
FRONTEND_URL=https://your-vercel-app.vercel.app
ALLOWED_ORIGINS=https://your-vercel-app.vercel.app

# Face service anti-spoofing
# Lower threshold = more permissive (0.3 recommended for webcam)
ANTISPOOF_ENABLED=true
ANTISPOOF_THRESHOLD=0.3
ANTISPOOF_MODEL_PATH=models/minifasnet_v2.onnx
MIN_FACE_DET_SCORE=0.5
